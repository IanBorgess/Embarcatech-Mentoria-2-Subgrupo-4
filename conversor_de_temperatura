#include <stdio.h>

float conversor_de_temperatura(char unidade, char conversor, float valor) {
    
    if (unidade == 'c') { 
        if (conversor == 'f') {
            return (valor * 9.0 / 5.0) + 32.0; 
        } else if (conversor == 'k') {
            return valor + 273.15;
        }
    } else if (unidade == 'f') { 
        
        if (conversor == 'c') {
            return (valor - 32.0) * 5.0 / 9.0; 
        } else if (conversor == 'k') {
            return (valor - 32.0) * 5.0 / 9.0 + 273.15; 
        }
        
    } else if (unidade == 'k') { 
        
        if (conversor == 'c') {
            return valor - 273.15; 
        } else if (conversor == 'f') {
            return (valor - 273.15) * 9.0 / 5.0 + 32.0; 
        }
    }
    return -1; 
}

int main() {
    
    char unidade, conversor;
    float valor, resultado;

    printf("Conversor de Temperatura\n");
    
    printf("\nDigite a unidade de origem ('c' para Celsius, 'f' para Fahrenheit, 'k' para Kelvin): ");
    scanf(" %c", &unidade);

    printf("\nDigite a unidade de destino ('c', 'f', 'k'): ");
    scanf(" %c", &conversor);

    printf("\nDigite o valor da temperatura: ");
    scanf("%f", &valor);

    resultado = conversor_de_temperatura(unidade, conversor, valor);

    if (resultado != -1) {
        printf("A conversão de %.2f°%c para %c é: %.2f\n", valor, unidade, conversor, resultado);
    } else {
        printf("Unidade inválida!\n");
    }
    return 0;
}
